{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C/C++ build g++.exe",
      "type": "cppbuild",
      "command": "g++",
      "args": [
        "-std=c++23",
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.exe",
        "-O3",
        "-march=native",
        "-mtune=native",
        "-ffast-math",
        "-funroll-loops",
        "-fomit-frame-pointer",
        "-Wmissing-include-dirs",
        "-Wno-unused-variable",
        "-flto",
        "-Wall",
        "-Werror",
        "-Wno-unused-but-set-variable",
        "-static",
        "-L${workspaceFolder}/Dependencies/raylib/src",
        "-L${workspaceFolder}/Dependencies/raylib",
        "-static-libgcc",
        "-static-libstdc++",
        "-pthread",
        "-DGLFW_STATIC",
        "-Wl,-Bstatic",
        "-lwinpthread",
        "-fopenmp",
        "-lgomp",
        "-lraylib",
        "-lglfw3",
        "-lopengl32",
        "-lgdi32",
        "-lshlwapi",
        "-lwinmm",
        "-lm",
        "-lkernel32",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compiled with g++"
    }
  ]
}
